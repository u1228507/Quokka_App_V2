<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/button_home_patientprofiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button_patientprofiles"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/circularImageContainer"
        android:textSize="18sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/circularImageContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_home_newpatientprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button_newpatientprofiles"
        app:layout_constraintTop_toBottomOf="@+id/circularImageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="-100dp"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
