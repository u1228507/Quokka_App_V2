<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.patientprofilehome.MotherPersonalInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postpartumvisitdetails_title_mother"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/textViewVisitDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postpartumvisitdetails_title_motherhealthalerts"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/textViewVisitAlerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postpartumvisitdetails_title_child"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/textViewChildVisitDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postpartumvisitdetails_title_childhealthalerts"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/textViewVisitChildAlerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>


        </LinearLayout>

    </ScrollView>
</FrameLayout>