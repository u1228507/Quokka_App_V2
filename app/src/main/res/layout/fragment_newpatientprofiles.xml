<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-38dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Input: First Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstname"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:hint="@string/newpatient_input_firstname"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:helperText="Required*"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/darkred"
                app:startIconDrawable="@drawable/baseline_person_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textinputedit_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input: Middle Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_middlename"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:hint="@string/newpatient_input_middlename"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:startIconDrawable="@drawable/baseline_person_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textinputedit_middlename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLength="31"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input: Last Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_lastname"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:hint="@string/newpatient_input_lastname"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:helperText="Required*"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/darkred"
                app:startIconDrawable="@drawable/baseline_person_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textinputedit_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLength="31"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input: Date of Birth (Still Need To Work On How User Inputs This -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_dob"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:hint="@string/newpatient_input_dob"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:helperText="Required*"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/darkred">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textinputedit_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:maxLength="10"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Header: Personal Medical History -->
            <TextView
                android:id="@+id/inputheaders_personalmedicalhistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/newpatient_input_header_personalmedicalhistory"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <!-- Input: Last Menstrual Cycle -->
                    <!-- Last Menstrual Cycle Question -->
            <TextView
                android:id="@+id/inputquestion_lastmenstcycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:text="@string/newpatient_input_lastmenstrualcycle"
                android:textSize="16sp"/>

                     <!-- Yes or No Menu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_lastmenstcycle"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp">

                <AutoCompleteTextView
                    android:id="@+id/input_dropdown_lastmenstcycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/newpatient_input_no"
                    tools:ignore="VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Conditional Input If Yes -->
            <TextView
                android:id="@+id/conditionaltext_lastmenstcycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:text="@string/newpatient_conditional_lastmenstrualcycle"
                android:textSize="16sp"
                android:visibility="gone"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_lastmenstcycle_yes"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:hint="@string/newpatient_input_date"
                android:visibility="visible"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_dropdown_lastmenstcycle_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:maxLength="10"
                    android:textColor="@color/black"
                    android:visibility="gone"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input: Mother Birth Defects -->
                <!-- Mother Birth Defects Question -->
            <TextView
                android:id="@+id/inputquestion_motherbirthdefect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:text="@string/newpatient_input_motherbirthdefects"
                android:textSize="16sp"/>

            <!-- Yes or No Menu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_motherbirthdefect"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp">

                <AutoCompleteTextView
                    android:id="@+id/input_dropdown_motherbirthdefect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/newpatient_input_no"
                    tools:ignore="VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Conditional Input If Yes -->
            <TextView
                android:id="@+id/conditionaltext_motherbirthdefect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:text="What birth defect(s) was the mother born with?"
                android:textSize="16sp"
                android:visibility="gone"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_motherbirthdefect_yes"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:hint="@string/newpatient_hint_motherbirthdefect"
                android:visibility="visible"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_dropdown_motherbirthdefect_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="100"
                    android:textColor="@color/black"
                    android:visibility="gone"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input: First Pregnancy? -->
                <!-- First Pregnancy Question -->
            <TextView
                android:id="@+id/inputquestion_firstpreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:text="@string/newpatient_input_firstpreg"
                android:textSize="16sp"/>

            <!-- Yes or No Menu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp">

            <AutoCompleteTextView
                android:id="@+id/input_dropdown_firstpreg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="none"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/newpatient_input_yes"
                tools:ignore="VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Conditional Input If Yes -->
            <TextView
                android:id="@+id/conditionaltext_firstpreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="0dp"
                android:text="@string/newpatient_conditional_firstpreg"
                android:textSize="16sp"
                android:visibility="gone"/>

                 <!-- Number of Previous Pregnancies  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_numprevpreg"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_numprevpreg"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_numprevpreg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of Living Children  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_numlivchild"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_numlivchild"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_numlivchil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of Low Weight Births (>2.5kg)  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_lowweight"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_lowweight"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_lowweight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of Stillborns  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_stillborns"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_stillborns"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_stillborns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of Miscarriages  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_miscarriages"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_miscarriages"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_miscarriages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of C Sections  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_csections"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_csections"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_csections"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of Postpartum Hemorrhages  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_postpartumhemorrhages"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_postpartumhemorrhages"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_postpartumhemorrages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of Pregnancy Infections  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_preginfections"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_preginfections"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_preginfections"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of High Blood Pressure Pregnancies  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_firstpreg_highbppregnancies"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                android:hint="@string/newpatient_input_highbppregnancy"
                android:visibility="gone"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_firstpreg_highbppregnacies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_personalmedicalother"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/newpatient_input_personalmedother"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textinputedit_personalmedicalother"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="101"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>