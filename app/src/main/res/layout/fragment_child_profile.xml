<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.patientprofilehome.MotherPersonalInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/childpersonalinfo_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childpersonalinfo_firstname"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/childpersonalinfo_middlename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childpersonalinfo_middlename"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/childpersonalinfo_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childpersonalinfo_lastname"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/childpersonalinfo_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childpersonalinfo_dob"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/childpersonalinfo_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childpersonalinfo_sex"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </ScrollView>
</FrameLayout>